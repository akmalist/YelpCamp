<% include partials/header %>

<h1>You can Submit your own campground images</h1>

<form action="/campgrounds" method="post">
  <div class="form-group">
      <input class="form-control" type="text" name="campName" placeholder="name">
  </div>
  <div class="form-group">
       <input class="form-control" type="text" name="image" placeholder="image">
  </div>
  <div class="form-group">
        <input class="form-control" type="text" name="description" placeholder="description">
  </div>
  <div class="form-group">
    <button btn btn-lg btn-primary btn-block>Submit</button>
    </div>
</form>

<a href="/campgrounds">Back</a>
